{
    "name": "Black Background",
    "version": "1.0.0",
    "description": "remove content of page and make black background",
    "manifest_version": 3,
    "permissions": ["activeTab", "scripting", "storage"],
    "action": {
        "default_icon": {
          "16": "images/icon-16.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": ["*://*/"]
}